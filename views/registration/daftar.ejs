<% layout('layouts/boilerplate') %> 
<%- include('../partials/flash') %>

<section class="forms">
    
    <div class="forms__image"></div> 

    <div class="forms__container sign-up-form">
        <div class="forms__imgBox sign-up-imgBox">
            <div class="sliding-link">
                <p>Kamu sudah punya akun?</p>
                <a class="sign-in-btn" href="/masuk">Masuk</a>
            </div>
            <img class="daftar" src="img/masuk/cartoon_nagakecil.png" alt="">
        </div>

        <div class="forms__box sign-up-box">
            <h2>Daftar</h2>
            <div class="login-options">
                <div class="other-logins">
                    <a href="/auth/google"><img src="img/masuk/google.png" alt=""></a>
                    <a href="/auth/github"><img src="img/masuk/GitHub.png" alt=""></a>
                    <a href="/auth/facebook"><img src="img/masuk/facebook.png" alt=""></a>
                </div>
                <p class="text">Atau, daftar dengan email...</p>
            </div>

            <form action="/daftar" method="POST" novalidate class="validated-form">
                <div class="field">
                    <i class="uil uil-at"></i>
                    <label for="email"></label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="email" required>
                </div>

                <div class="field">
                    <i class="uil uil-user"></i>
                    <label for="nama"></label>
                    <input class="form-control" type="text" id="nama" name="nama" placeholder="nama lengkap" required>
                </div>

                <div class="field">
                    <i class="uil uil-user-circle"></i>
                    <label for="username"></label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="username" maxlength="20" required>
                </div>

                <div class="field">
                    <i class="uil uil-lock-alt"></i>
                    <label for="password"></label>
                    <input class="form-control" type="password" id="password" name="password" placeholder="password" minlength="8" required>
                </div>

                <button class="submit-btn">Daftar</button>
            </form>
        </div>
    </div>

</section>

<script async>
    document.title = "Daftar | FibonacciKu";
</script>

<script>
    const username = document.getElementById('username');
    username.oninput = function() {
        username.value = username.value.toLowerCase()
    }
</script>

<script src="/js/masuk/script.js" async></script>