<header class="header">
        <div class="overlay has-fade"></div>
    
        <nav class="container container--pall flex flex-jc-sb flex-ai-c">
            <% if(!currentUser) {%> 
            <a href="/" class="header__logo">
                <img src="/img/beranda/logofibonama.svg" alt="FibonacciKu">
            </a>
            <% } else {%> 
            <a href="/beranda" class="header__logo">
                <img src="/img/beranda/logofibonama.svg" alt="FibonacciKu">
            </a>
            <% } %> 
            
            <a id="btnHamburger" type="button" class="header__toggle hide-for-desktop">
                <span></span>
                <span></span>
                <span></span>
            </a>
    
            <div class="header__links hide-for-mobile">
                <% if(!currentUser) {%><a href="/">Beranda</a><% } else {%><a href="/beranda">Beranda</a><% } %><a href="/mata-pelajaran">Mata Pelajaran</a><a href="/tentang">Tentang</a><a href="/kontak">Kontak</a><a href="https://saweria.co/Fibonacciku" target="_blank">Donasi</a>
            </div>
            
            <div class="header__register hide-for-mobile">
                <% if(!currentUser) {%> 
                <a href="/masuk" class="button header__cta">Masuk</a>
                <a href="/daftar" class="button header__cta">Daftar</a>
                <% } else {%>
                    <div class="menu-desktop">
                        <div id="dropdowns" class="dropdowns">
                            <a id="drop-down" class="drop-down" type="button">
                                <img class="foto-profil" src="<%= user.avatar.path %>" alt="logo profile">
                                <i class="uil uil-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="profil-dropdown"><a href="/fibo/<%= user.username %>"><i class="uil uil-user-circle"></i>Profil</a></li>
                                <li class="pengaturan-dropdown"><a href="/pengaturan/akun"><i class="uil uil-setting"></i>Pengaturan</a></li>
                                <li class="garis-batas"><hr></li>
                                <li class="keluar-dropdown"><a href="/keluar"><i class="uil uil-signout"></i>Keluar</a></li>
                            </ul>
                        </div>
                        <div class="display-username">
                            <%= user.username %> 
                        </div>
                    </div>
                    
                <!-- <a href="/keluar" class="button header__cta keluar">Keluar</a> -->
                <% } %> 
            </div>
        </nav>
    
        <div class="header__menu has-fade hide-for-desktop">
            <% if(!currentUser) {%>
            <a href="/">Beranda</a>
            <% } else {%>
            <a href="/fibo/<%= user.username %>">Profil</a>
            <a href="/keluar">Keluar</a>
            <a href="/beranda">Beranda</a>
            <% } %>
            <a href="/mata-pelajaran">Mata Pelajaran</a>
            <a href="/tentang">Tentang</a>
            <a href="/kontak">Kontak</a>
            <a href="https://saweria.co/Fibonacciku" target="_blank">Donasi</a>
        </div>
</header>