<% layout('layouts/boilerplate') %> 

<link href="https://fonts.googleapis.com/css2?family=Lora&display=swap" rel="stylesheet">

<style>
    .profils {
        margin-top: 80px;
    }
</style>

<section class="profils">
    <div class="profil">

        <div class="profil__background">
            <img src="<%= username.background %>">
        </div>
        <%- include('../partials/flash') %>
        <div class="container container--px">
            <div class="profil__info">
                <div class="profil__avatar">
                    <img src="<%= username.avatar %>">
                </div>
                <div class="profil__username">
                    <div class="user">
                        <h2><%= username.username %></h2>
                        <% if(user.username == username.username) {%> 
                            <a href="/pengaturan"><i class="uil uil-setting"></i></a>
                        <% } %> 
                    </div>

                    <div class="nama">
                        <h3><%= username.nama %> </h3>
                        <p><%= username.bio %> Lorem ipsum, dolor sit amet consectetur adipisicing elit. Corrupti voluptate, necessitatibus reiciendis voluptatem laudantium error fuga dolores facilis eum no</p>
                        <div class="link">
                            <% if(username.link.instagram) { %>
                            <a href="https://www.instagram.com/<%= username.link.instagram %>" target="_blank"><img src="/img/profile/instagram-icon.png" alt=""></a>
                            <% } %>
                            <% if(username.link.github) { %> 
                            <a href="http://github.com/<%= username.link.github %>" target="_blank"><img src="/img/profile/github-icon.png" alt=""></a>
                            <% } %> 
                            <% if(username.link.twitter) { %> 
                            <a href="https://twitter.com/<%= username.link.twitter %>" target="_blank"><img src="/img/profile/twitter-icon.png" alt=""></a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    
</section>

<script async>
    document.title = "<%= username.username %> | FibonacciKu";
</script>